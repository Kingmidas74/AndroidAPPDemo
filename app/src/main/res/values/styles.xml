<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Spinner.Material.DropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@drawable/material_spinner_selector</item>
    </style>

    <style name="DropDownTheme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/material_spinner_selector</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">

    </style>

    <style name="CardItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">@dimen/single_grid_step</item>
    </style>

    <style name="ListItem" parent="CardItem">
        <item name="android:layout_height">@dimen/ninefold_grid_step</item>
        <item name="android:padding">@dimen/double_grid_step</item>
        <item name="android:layout_margin">@dimen/zero_grid_step</item>
    </style>

    <style name="SceneCard" parent="CardItem">
    </style>

    <style name="TaskCard" parent="CardItem">
    </style>

    <style name="ContainerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/list_item_backgrounds</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.ImageButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:color">@drawable/icon_color</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CollapseButton" parent="Button">
        <item name="android:layout_marginEnd">@dimen/single_grid_step</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="CardSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/single_grid_step</item>
    </style>

    <style name="CardHeader" parent="CardSection">
    </style>

    <style name="CardContent" parent="CardSection">
    </style>


    <style name="CardActions" parent="CardSection">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/list_item_backgrounds</item>
        <item name="android:layout_margin">@dimen/zero_grid_step</item>
        <item name="android:layout_marginTop">@dimen/single_grid_step</item>
        <item name="android:padding">@dimen/single_grid_step</item>
    </style>

    <style name="CardActionsButton" parent="Button">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Title" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SubTitle" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4dffffff</item>
    </style>

    <style name="PrimaryInfo" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="SceneRenderType">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">@dimen/eightfold_grid_step</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">@dimen/eightfold_grid_step</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/double_grid_step</item>
    </style>






</resources>
